<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:Menu" 
	x:Class="Chemickeprvky.Menu"
	NavigationPage.HasNavigationBar="false"
	>
	<ContentPage.Content>
		<StackLayout Spacing="10" x:Name="layout">
			<Frame Padding="60,60,30,30" HasShadow="False"></Frame>

			<Image Source="AppIcon.png" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="Center" Aspect="AspectFit" MinimumHeightRequest="70"/>
			<BoxView/>
			<Label Text="Chemické prvky" FontSize="Large" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="CenterAndExpand"/>

			<Frame Padding="30,30,30,30" HasShadow="False"></Frame>

	      	<Button Text="Přehled prvků" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="FillAndExpand" FontSize="20" Clicked="vypis" />
	      	<Button Text="Test" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="FillAndExpand" FontSize="20" Clicked="test" />

			<Frame Padding="30,30,30,30" HasShadow="False"></Frame>

			<Label Text="Statistika" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="Center" FontSize="15"/>
			<Label x:Name="score" Text="0/1" VerticalOptions="CenterAndExpand"
	        HorizontalOptions="Center" FontSize="10"/>
	    </StackLayout>
	</ContentPage.Content>
</ContentPage>
